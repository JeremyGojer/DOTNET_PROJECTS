@using BOL
@{
    ViewData["Title"] = "Home Page";
    @* IProductServices productServices = new ProductServices();
    var products = productServices.GetAllProducts(); *@
    Product product = ViewData["product"] as Product;
}
<h1>Update Product</h1>
<hr/>
<form  method="POST" action="/Products/Update/@product.Id">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="name" class="form-control" id="name" name="name" value=@product.Name>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input type="description" class="form-control" id="description" name="description" value=@product.Description>
  </div>
  <div class="form-group">
    <label for="unitPrice">Unit Price:</label>
    <input type="unitPrice" class="form-control" id="unitPrice" name="unitPrice" value=@product.UnitPrice>
  </div>
  <div class="form-group">
    <label for="quantity">Quantity:</label>
    <input type="quantity" class="form-control" id="quantity" name="quantity" value=@product.Quantity>
  </div>
  <div class="form-group">
    <label for="imageUrl">Image Url:</label>
    <input type="imageUrl" class="form-control" id="imageUrl" name="imageUrl" value=@product.ImageUrl>
  </div>
  <button type="submit" class="btn btn-success">Update</button>
  
</form>